root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 160
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{yml,yaml,sh}]
indent_style = space
indent_size = 2
max_line_length = 260
trim_trailing_whitespace = true

[*.{js,cjs,ts,jsx,tsx}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

[.*rc]
indent_size = 2
